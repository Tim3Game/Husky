{
    "parser": "@typescript-eslint/parser",
    "extends": ["plugin:@typescript-eslint/recommended", "eslint:recommended", "prettier", "prettier/@typescript-eslint"],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    },
    "plugins": ["prettier"]
}
